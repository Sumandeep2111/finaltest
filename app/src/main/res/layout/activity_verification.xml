<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification">


    <Button
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="159dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="30dp"
        android:background="#009688"
        android:text="verify"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chkbox" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridlayout"
        app:columnCount="3"
        app:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image1"
            android:src="@drawable/img1"
            android:layout_margin="10dp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="changeSource"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image2"
            android:src="@drawable/img2"
            android:layout_margin="10dp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="changeSource1"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image3"
            android:src="@drawable/img3"
            android:layout_margin="10dp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="changeSource2"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image4"
            android:src="@drawable/img4"
            android:layout_margin="10dp"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="changeSource3"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image5"
            android:src="@drawable/img5"
            android:layout_margin="10dp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="changeSource4"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image6"
            android:src="@drawable/img6"
            android:layout_margin="10dp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="changeSource5"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image7"
            android:src="@drawable/img7"
            android:layout_margin="10dp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="changeSource6"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image8"
            android:src="@drawable/img8"
            android:layout_margin="10dp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="changeSource7"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image9"
            android:src="@drawable/img9"
            android:layout_margin="10dp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="changeSource8"/>
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/select_textview"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="173dp"
        android:layout_marginRight="173dp"
        android:layout_marginBottom="70dp"
        android:text="Select the traffic lights"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.125"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="230dp"
        android:layout_marginBottom="106dp"
        android:text="I am not robot"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridlayout" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="91dp"
        app:srcCompat="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/chkbox"
        app:layout_constraintTop_toBottomOf="@id/gridlayout"
        app:layout_constraintVertical_bias="0.533"/>




</androidx.constraintlayout.widget.ConstraintLayout>